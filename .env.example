# Face Recognition Service Configuration

# Environment (development, production, testing)
ENVIRONMENT=development

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# Model Settings
MODEL_NAME=buffalo_l
CTX_ID=-1

# Detection Settings
DETECTION_CONFIDENCE=0.5

# Matching Settings
MATCHING_THRESHOLD=0.4
MATCHING_METRIC=cosine

# Pose Settings
YAW_THRESHOLD=20.0
PITCH_THRESHOLD=15.0

# Camera Settings
CAMERA_ID=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30

# Database Settings
DJANGO_SETTINGS_MODULE=your_project.settings
CACHE_SIZE=1000

# Logging
LOG_LEVEL=INFO

# CORS (comma-separated origins)
CORS_ORIGINS=*
